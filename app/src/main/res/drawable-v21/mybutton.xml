<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="150dip" />
            <stroke android:width="4dip" android:color="#ff007b" />
            <gradient android:angle="-90" android:startColor="#f45164" android:endColor="#da5d77"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="150dip" />
            <stroke android:width="1dip" android:color="#ffeff3" />
            <solid android:color="#e7ef0e3b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="150dip" />
            <stroke android:width="4dip" android:color="#ff007b" />
            <gradient android:angle="-90" android:startColor="#06e4237a" android:endColor="#00ff0037" />
        </shape>
    </item>

</selector>