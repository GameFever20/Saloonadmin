<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.admin.saloon.craftystudio.saloonadmin.FullDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tabbedUser_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text=" No User Detail yet!"
            android:textSize="20dp"
            android:textStyle="normal"
            android:typeface="sans" />


        <TextView
            android:id="@+id/tabbedUser_userPhoneNumber_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="+91**********"
            android:textSize="20dp"
            android:textStyle="normal"
            android:typeface="sans" />

        <TextView
            android:id="@+id/tabbedUser_userGender_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Male"
            android:textSize="20dp"
            android:textStyle="normal"
            android:typeface="sans" />


        <TextView
            android:id="@+id/tabbedUser_userAge_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="18"
            android:textSize="20dp"
            android:textStyle="normal"
            android:typeface="sans" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


