<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_saloon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluish"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.admin.saloon.craftystudio.saloonadmin.AddSaloonActivity"
    tools:showIn="@layout/activity_add_saloon">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:elevation="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:text="Get A Look"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textSize="50sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a New saloon"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:theme="@style/EditTextHint">

            <EditText
                android:id="@+id/saloon_email_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Saloon's Id"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/EditTextHint">


            <EditText
                android:id="@+id/saloon_name_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Enter Saloon Name"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/EditTextHint">


            <EditText
                android:id="@+id/saloon_password_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Enter Saloon's Password"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </android.support.design.widget.TextInputLayout>





        <Button
            android:id="@+id/saloon_addsaloon_button"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/pink"
            android:bottomLeftRadius="20dp"
            android:bottomRightRadius="20dp"
            android:text="Add Saloon"
            android:textColor="@color/white"
            android:topLeftRadius="20dp"
            android:topRightRadius="20dp" />

    </LinearLayout>


</RelativeLayout>
